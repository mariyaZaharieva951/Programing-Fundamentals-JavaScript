
            <section id="edit-container">
                <div class="edit-container-info">
                    <!-- Do not forget to change the path to the image -->
                    <img src="{{product.picture}}" alt="image">

                    <form action="/product/edit/{{product._id}}" method="POST" class="container-text">
                        <h2>Edit</h2>
                        <p>Edit your masterpiece!</p>

                        <label for="title">Title:</label>
                        <input type="text" id="title" name="title" value="{{product.title}}">

                        <label for="painting-tech">Painting technique:</label>
                        <input type="text" id="painting-tech" name="technique" value="{{product.technique}}">

                        <label for="picture">Art picture:</label>
                        <input type="text" id="picture" name="picture" value="{{product.picture}}">

                        <label for="certificate">Certificate of authenticity:</label>
                        <input type="text" id="certificate" name="certificate" value="{{product.certificate}}">

                        <button class="edit-btn">Edit</button>
                    </form>

                </div>
            </section>
        