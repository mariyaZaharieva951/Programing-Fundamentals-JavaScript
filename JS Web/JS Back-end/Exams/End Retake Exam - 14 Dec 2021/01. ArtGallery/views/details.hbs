
            <section id="details-page">
                <h1>Details</h1>
                <article class="details-card">

                    <article class="details-card-text">
                        <h2>Title:<br> {{product.title}}</h2>
                        <h3>Author: {{product.author.username}}</h3>
                        <h3>Painting technique: {{product.technique}}</h3>
                        <h3>Certificate of authenticity: {{product.certificate}}</h3>

                        <!-- If there is no registered user, do not display buttons-->
                        {{#if user}}
                        <div class="buttons">
                            {{#if product.isAuthor}}
                            <!-- Only for registered user and author of the publication -->
                            <a href="/product/edit/{{product._id}}" class="btn-edit">Edit</a>
                            <a href="/product/delete/{{product._id}}" class="btn-delete">Delete</a>
                            {{else}}
                            {{#if product.isUsers}}
                            <!-- logged in user who has already shared the publication-->
                            <p class="shared-pub">You already shared this publication</p>
                            {{else}}
                            <!-- logged in user who has not yet shared the publication-->
                            <a href="/product/share/{{product._id}}" class="btn-share">Share publication</a>
                            {{/if}}
                            {{/if}}
                        </div>
                        {{/if}}
                    </article>

                    <article class="details-card-image">
                        <img src="{{product.picture}}" alt="art-image2">
                    </article>

                </article>
            </section>
  