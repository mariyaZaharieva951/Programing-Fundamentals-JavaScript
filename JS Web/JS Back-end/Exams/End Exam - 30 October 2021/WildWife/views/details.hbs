
            <section id="details-page">

                <div class="main_card">
                    <div class="card_left">
                        <div class="card_datails">

                            <h1>Title: {{product.title}}</h1>
                            <h3>Created by an author: {{product.author}}</h3>
                            <div class="card_animal">
                                <p class="card-keyword">Keyword: {{product.keyword}}</p>
                                <p class="card-location">Location: {{product.location}}</p>
                                <p class="card-date">Date: {{product.date}}</p>
                            </div>

                            <p class="disc">Description: {{product.description}}</p>

                            {{#if product.hasUser}}
                            <!-- If there is no registered user, do not display buttons-->
                            <div class="social-btn">
                                {{#if product.isAuthor}}
                                <!-- Only for registered user and author of the post -->
                                <a href="/product/edit/{{product._id}}" class="edit-btn">Edit</a>
                                <a href="/product/delete/{{product._id}}" class="del-btn">Delete</a>
                                {{else}}
                                {{#if product.isVotes}}
                                <!-- logged in user who has already voted-->
                                <p class="thanks-for-vote">Thanks For Voting</p>
                                {{else}}
                                <!-- logged in users, who have not yet voted-->
                                <a href="/product/upVote/{{product._id}}" class="vote-up">UpVote +1</a>
                                <a href="/product/downVote/{{product._id}}" class="vote-down">DownVote -1</a>
                                {{/if}}
                                {{/if}}
                            </div>
                            {{/if}}
                        </div>
                    </div>
                    <div class="card_right">
                        <img src="/static/img/animal.jpg" alt="image">
                    </div>
                </div>

            </section>

            <section id="votes">
                <div class="vote-info">
                    <div class="card_left">
                        <div class="card_datails">
                            <h1>Votes</h1>
                            <div class="card_vote">
                                <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
                                <p class="PV">Total rating of votes: 0</p>
                            </div>
                            <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->
                            <!-- <p class="disc">People who voted for the post - alex@gmai.com, petar@gmail.com, petq@gmail.com</p>-->

                            <!-- If not display: -->
                            <p class="disc">People who voted for the post - No one has voted yet.</p>
                        </div>
                    </div>
                </div>
            </section>

 