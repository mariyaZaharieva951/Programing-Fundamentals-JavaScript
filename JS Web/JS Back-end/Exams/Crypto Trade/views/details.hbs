
    <main>
        {{#with offer}}
        <section id="details-info">
            <h1>Details</h1>
            <div class="coin-image">
                <img src="{{image}}">
            </div>

            <div class="coin-info">
                <div class="coin-text">
                    <h1 id="name">{{name}}</h1>
                    <h3 id="payment">Payment method: {{methodPay}}</h3>
                    <p id="price"><span>Price: {{price}}</span></p>
                    <p id="description">{{description}}</p>
                </div>
                    {{#if hasUser}}
                        <div class="product-btn"></div>
                        {{#if isOwner}}
                    <!--Only for registered user and author of the publication -->
                    <div class="author">
                        <a href="/crypto/edit/{{_id}}" class="btn-edit">Edit</a>
                        <a href="/crypto/delete/{{_id}}" class="btn-delete">Delete</a>
                    </div>
                        {{else}}
                    
                        {{#if isBuy}}
                    <!-- Logged in user who has already buy this crypto-->
                    <p class="buy-message">You already bought these crypto coins.</p>
                        {{else}}
                    <!-- Logged in user who has not yet buy this crypto-->
                    <a href="/crypto/buy" class="btn-buy">Buy</a>
                        {{/if}}
                        {{/if}}
                    
                    {{/if}}  
            </div>
        </section>
        {{/with}}
    </main>
